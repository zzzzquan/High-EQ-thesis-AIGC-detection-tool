{
  "name": "ai-detection-platform",
  "version": "1.0.0",
  "description": "高情商论文AI率检测网站",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:client": "vite",
    "dev:api": "tsx api/server.ts",
    "build": "vite build",
    "build:api": "echo \"skip backend build\"",
    "start": "tsx api/server.ts",
    "test": "cd src && npm test && cd ../api && npm test",
    "lint": "cd src && npm run lint && cd ../api && npm run lint",
    "type-check": "tsc --noEmit -p tsconfig.json"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.16",
    "@types/express": "^5.0.4",
    "@types/multer": "^2.0.0",
    "@vitejs/plugin-react": "^5.1.0",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "concurrently": "^8.2.2",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.16",
    "ts-node": "^10.9.2",
    "vite": "^7.1.12",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ai-detection",
    "content-analysis",
    "academic-integrity",
    "react",
    "nodejs",
    "typescript"
  ],
  "author": "AI Detection Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "@tanstack/react-query": "^5.90.5",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "ioredis": "^5.8.2",
    "jose": "^6.1.0",
    "lucide-react": "^0.548.0",
    "multer": "^2.0.2",
    "openai": "^6.7.0",
    "puppeteer": "^24.26.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.4",
    "sonner": "^2.0.7",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "zustand": "^5.0.8"
  }
}
